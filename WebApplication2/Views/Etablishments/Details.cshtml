@model WebApplication2.Models.Etablishment
@using Microsoft.AspNetCore.Http;
@{


    ViewData["Title"] = "Details";
    var test = (List<Comment>)ViewData["comment"];
    Comment toto = null;
    try
    {
        toto = test.Find(x => x.userID == Context.Session.GetInt32("userID"));
        test.Remove(toto);
        
    }
    catch(Exception)
    {
       
    }


}

